    <!-- Use PSR-2 as a base -->
    <rule ref="PSR2"/>

    <rule ref="PSR2.Methods.MethodDeclaration.Underscore">
        <!-- <exclude-pattern>src/Model.php</exclude-pattern> -->
    </rule>
</ruleset>