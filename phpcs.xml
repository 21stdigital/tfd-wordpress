<?xml version="1.0"?>
<ruleset name="21st digital">
    <description>21st digital Coding Standards</description>

    <!-- Scan these files -->
    <file>Setup</file>

    <!-- Show colors in console -->
    <arg value="-colors"/>

    <!-- Show sniff codes in all reports -->
